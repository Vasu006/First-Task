<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="175sp"
    android:background="#82CAFF"
    android:layout_marginVertical="5sp"
    android:layout_marginHorizontal="10sp"
    android:paddingHorizontal="15sp"
    android:paddingVertical="10sp">

    <TextView
        android:id="@+id/name_second"
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:text="Name"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/email_second"
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:text="Email"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_second"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/gender_second"
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:text="Gender"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email_second"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/jobType_second"
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:text="Job"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gender_second"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/qualification_second"
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:text="Qualification"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jobType_second"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>